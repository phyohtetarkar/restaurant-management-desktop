<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phyohtet.restaurant.controller.Items">
   <children>
      <VBox prefWidth="100.0" styleClass="space5" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT">
               <styleClass>
                  <String fx:value="content-box" />
                  <String fx:value="color-600" />
               </styleClass>
               <children>
                  <ComboBox fx:id="sCategory" prefWidth="150.0" promptText="Category">
                     <styleClass>
                        <String fx:value="white-background" />
                        <String fx:value="shadow" />
                        <String fx:value="customize-combo" />
                     </styleClass></ComboBox>
                  <ComboBox fx:id="sType" layoutX="89.0" layoutY="20.0" prefWidth="150.0" promptText="Type">
                     <styleClass>
                        <String fx:value="white-background" />
                        <String fx:value="shadow" />
                        <String fx:value="customize-combo" />
                     </styleClass></ComboBox>
                  <TextField fx:id="sName" promptText="Search By Name" styleClass="width-250" />
                  <Button mnemonicParsing="false" onAction="#clear" prefHeight="32.0" text="Clear">
                     <styleClass>
                        <String fx:value="width-100" />
                        <String fx:value="accent-button" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="itemsTable" styleClass="shadow" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="250.0" text="Name">
               		<cellValueFactory>
               			<PropertyValueFactory property="name" />
               		</cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="-1.0" minWidth="250.0" prefWidth="250.0" text="Category">
                	<cellValueFactory>
               			<PropertyValueFactory property="category" />
               		</cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="-1.0" minWidth="250.0" prefWidth="250.0" text="Type">
                	<cellValueFactory>
               			<PropertyValueFactory property="type" />
               		</cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="-1.0" minWidth="250.0" prefWidth="250.0" text="Price">
                	<cellValueFactory>
               			<PropertyValueFactory property="price" />
               		</cellValueFactory>
                </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT">
               <styleClass>
                  <String fx:value="content-box" />
                  <String fx:value="color-500" />
                  <String fx:value="space10" />
               </styleClass>
               <children>
                  <Button mnemonicParsing="false" onAction="#add" prefHeight="32.0" text="Add New">
                     <styleClass>
                        <String fx:value="width-100" />
                        <String fx:value="accent-button" />
                     </styleClass>
                  </Button>
                  <Button layoutX="25.0" layoutY="20.0" mnemonicParsing="false" onAction="#delete" prefHeight="32.0" text="Delete">
                     <styleClass>
                        <String fx:value="width-100" />
                        <String fx:value="accent-button" />
                     </styleClass>
                  </Button>
                  <Button layoutX="25.0" layoutY="20.0" mnemonicParsing="false" onAction="#edit" prefHeight="32.0" text="Edit">
                     <styleClass>
                        <String fx:value="width-100" />
                        <String fx:value="accent-button" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="contentView" />
      <String fx:value="space5" />
   </styleClass>
   <stylesheets>
      <URL value="@../styles/application.css" />
      <URL value="@../styles/color-blue.css" />
      <URL value="@../styles/table-blue.css" />
   </stylesheets>
</HBox>

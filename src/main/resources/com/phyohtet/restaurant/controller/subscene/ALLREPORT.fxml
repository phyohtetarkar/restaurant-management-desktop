<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phyohtet.restaurant.controller.subscene.AllReport">
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="space5" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
               <styleClass>
                  <String fx:value="content-box" />
                  <String fx:value="color-600" />
               </styleClass>
               <children>
                  <Label text="Sale Histories">
                     <styleClass>
                        <String fx:value="fs16" />
                        <String fx:value="bold-text" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" styleClass="shadow" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="orderHeadColumn" prefWidth="75.0" text="Order Head">
                  	 <cellValueFactory>
                        <PropertyValueFactory property="orderHead" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="itemColumn" prefWidth="100.0" text="Item">
                     <cellValueFactory>
                        <PropertyValueFactory property="item" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Price">
                     <cellValueFactory>
                        <PropertyValueFactory property="price" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="Quantity">
                     <cellValueFactory>
                        <PropertyValueFactory property="quantity" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="dateColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Sale Date">
                  	 <cellValueFactory>
                        <PropertyValueFactory property="refDate" />
                     </cellValueFactory>
                  </TableColumn>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../../styles/application.css" />
      <URL value="@../../styles/color-blue.css" />
      <URL value="@../../styles/table-blue.css" />
   </stylesheets>
</HBox>

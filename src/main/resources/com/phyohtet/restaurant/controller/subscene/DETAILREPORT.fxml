                  <TableColumn fx:id="nameColumn" maxWidth="1.7976931348623157E308" minWidth="240.0" prefWidth="-1.0" text="Item">
                     <cellValueFactory>
                        <PropertyValueFactory property="item" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn maxWidth="70.0" minWidth="70.0" prefWidth="70.0" text="Qty">
                     <cellValueFactory>
                        <PropertyValueFactory property="quantity" />
                     </cellValueFactory>
                  </TableColumn>

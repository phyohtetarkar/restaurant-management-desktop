                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <styleClass>
            <String fx:value="leftColumn" />
            <String fx:value="space5" />
         </styleClass>
      </VBox>
      <VBox prefWidth="100.0">
         <children>
            <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
               <styleClass>
                  <String fx:value="content-box" />
                  <String fx:value="color-600" />
               </styleClass>
               <children>
                  <Label text="Order Items">
                     <styleClass>
                        <String fx:value="fs16" />
                        <String fx:value="bold-text" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
            <TableView fx:id="itemTable" editable="true" styleClass="shadow" VBox.vgrow="ALWAYS">
